@model IEnumerable<GrandesRentACar.Models.Car>

@{
    ViewData["Title"] = "Available Cars";
}

<!-- Bootstrap or any other CSS framework for styling -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Available Cars</h1>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var car in Model)
            {
                <div class="col-md-4 mb-4">
                    <!-- Car card -->
                    <div class="card shadow-sm">
                        <!-- Car image as a button -->
                        <a asp-action="Index" asp-controller="SelectedCar" asp-route-carId="@car.CarID">
                            <img src="~/img/@car.ImageUrl" class="card-img-top img-fluid" alt="Car Image" style="height: 250px; object-fit: cover;">
                        </a>

                        <div class="card-body">
                            <h5 class="card-title">@car.ModelName (@car.ModelYear)</h5>
                            <p class="card-text">
                                <strong>Fuel Type:</strong> @car.FuelType<br />
                                <strong>Gear Type:</strong> @car.GearType<br />
                                <strong>Daily Price:</strong> $@car.DailyPrice
                            </p>
                            <p class="card-text text-muted">@car.Description</p>

                            <!-- Button to view the selected car -->
                            <a asp-action="Index" asp-controller="SelectedCar" asp-route-carId="@car.CarID" class="btn btn-primary btn-block">View Details</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">No cars available for the selected dates.</p>
        }
    </div>
</div>

<!-- Optional JS for Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
