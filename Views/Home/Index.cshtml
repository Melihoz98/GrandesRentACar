@{
    ViewData["Title"] = "Car Selection";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Select Your Cool Car</h1>

    <div class="row mb-4">
        <div class="col-md-12">
            <form asp-action="AvailableCars" method="get">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="startDate">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" required />
                    </div>
                    <div class="form-group col-md-6">
                        <label for="endDate">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" required />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Check Availability</button>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <a href="/Home/Details/@car.CarID">
                        <img src="~/img/@car.ImageUrl" class="card-img-top img-fluid" alt="@car.ModelName" style="height: 250px; object-fit: cover;">
                    </a>

                    <div class="card-body">
                        <h5 class="card-title">@car.ModelName (@car.ModelYear)</h5>
                        <p class="card-text">
                            <strong>Fuel Type:</strong> @car.FuelType<br />
                            <strong>Gear Type:</strong> @car.GearType<br />
                            <strong>Daily Price:</strong> $@car.DailyPrice
                        </p>
                        <p class="card-text text-muted">@car.Description</p>

                        <a href="/Home/Details/@car.CarID" class="btn btn-primary btn-block">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
