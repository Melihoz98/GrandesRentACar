@{
    ViewData["Title"] = "Car Selection";
}

<!-- Bootstrap or any other CSS framework for styling -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Select Your Cool Car</h1>
    <div class="row">

        <!-- Loop through the cars and display them -->
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <!-- Car card -->
                <div class="card shadow-sm">
                    <!-- Car image as a button -->
                    <a href="/Car/Details/@car.CarID">
                        <img src="~/img/@car.ImageUrl" class="card-img-top img-fluid" alt="@car.ModelName" style="height: 250px; object-fit: cover;">
                    </a>

                    <div class="card-body">
                        <h5 class="card-title">@car.ModelName (@car.ModelYear)</h5>
                        <p class="card-text">
                            <strong>Fuel Type:</strong> @car.FuelType<br />
                            <strong>Gear Type:</strong> @car.GearType<br />
                            <strong>Daily Price:</strong> $@car.DailyPrice
                        </p>
                        <p class="card-text text-muted">@car.Description</p>

                        <!-- Button to book the car or view more details -->
                        <a href="/Car/Details/@car.CarID" class="btn btn-primary btn-block">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Optional JS for Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
