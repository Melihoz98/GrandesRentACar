@{
    ViewData["Title"] = "Car Selection";
}

<!-- External Resources -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/css/HomeStyle.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<!-- Flatpickr CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<!-- Date Selection Section -->
<div class="row justify-content-center mb-9">
    <div class="col-md-8 mx-auto custom-width-form">
        <!-- Added custom class here -->
        <form asp-action="AvailableCars" method="get">
            <div class="form-row d-flex align-items-center">

                <!-- Pick-up Date (Afhentning) -->
                <div class="form-group col-md-3">
                    <input type="text" class="form-control date-input" id="startDate" name="startDate" placeholder="Afhentning" />
                </div>

                <!-- Drop-off Date (Aflevering) -->
                <div class="form-group col-md-3">
                    <input type="text" class="form-control date-input" id="endDate" name="endDate" placeholder="Aflevering" />
                </div>

                <!-- Submit Button -->
                <div class="form-group col-md-3">
                    <button type="submit" class="btn btn-search btn-block">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Flatpickr JS -->
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    // Ensure the DOM is fully loaded before initializing Flatpickr
    window.onload = function () {
        flatpickr("#startDate", {
            altInput: true,  // Display date in nice format for user
            altFormat: "m-d-y", // Format shown to the user (mm-dd-yy)
            dateFormat: "Y-m-d" // Format sent to the server (yyyy-MM-dd)
        });

        flatpickr("#endDate", {
            altInput: true,
            altFormat: "m-d-y", // Format shown to the user (mm-dd-yy)
            dateFormat: "Y-m-d" // Format sent to the server (yyyy-MM-dd)
        });
    };
</script>


<!-- Cars Section -->
<div class="container-cars">
    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-6 col-md-4 col-lg-2 mb-4">
                <!-- Adjusted for a more responsive grid -->
                <div class="card shadow-sm h-100">
                    <a href="/Home/Details/@car.CarID">
                        <img src="~/img/@car.ImageUrl" class="card-img-top img-fluid" alt="@car.ModelName" style="height: 200px; object-fit: cover; border-radius: 10px 10px 0 0;">
                    </a>
                    <div class="card">
                        <h5 class="card-title modelyear-title">@car.ModelName (@car.ModelYear)</h5>
                        <p class="card-text mb-2">
                            <strong>Fuel Type:</strong> @car.FuelType<br />
                            <strong>Gear Type:</strong> @car.GearType<br />
                            <strong>Daily Price:</strong> $@car.DailyPrice
                        </p>
                        <p class="card-text text-muted">@car.Description</p>
                        <a href="/Home/Details/@car.CarID" class="btn btn-primary btn-block">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
