@model GrandesRentACar.Models.Car

@{
    ViewData["Title"] = "Araç Detayları";
}

<!-- Bootstrap ve FontAwesome ikonlar için -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<div class="container mt-5">
    <div class="row">
        <!-- Araç Görseli -->
        <div class="col-md-6 mb-4">
            <img src="~/img/@Model.ImageUrl" class="img-fluid rounded shadow" alt="@Model.ModelName" style="height: 400px; object-fit: cover;">
        </div>

        <!-- Araç Detayları -->
        <div class="col-md-6 mb-4">
            <h2 class="font-weight-bold">@Model.ModelName (@Model.ModelYear)</h2>
            <hr />
            <p class="lead">
                <strong><i class="fas fa-gas-pump"></i> Yakıt Türü:</strong> @Model.FuelType<br />
                <strong><i class="fas fa-cogs"></i> Vites Türü:</strong> @Model.GearType<br />
                <strong><i class="fas fa-dollar-sign"></i> Günlük Fiyat:</strong> $@Model.DailyPrice<br />
                <strong><i class="fas fa-info-circle"></i> Açıklama:</strong> @Model.Description
            </p>

            <!-- Araç rezervasyon formu -->
            <form id="bookingForm" asp-controller="SelectedCar" asp-action="AddCarToReservation" method="post">
                <input type="hidden" name="carId" value="@Model.CarID" />
                <button type="button" class="btn btn-primary btn-lg btn-block shadow" onclick="submitBookingForm()">
                    <i class="fas fa-car"></i> Bu Aracı Kirala
                </button>
            </form>
        </div>
    </div>
</div>

<!-- Rezervasyon Modal -->
<div class="modal fade" id="bookingModal" tabindex="-1" role="dialog" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Bu Aracı Kirala</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Kapat">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="BookCar" asp-controller="SelectedCar" method="post">
                    <div class="form-group">
                        <label for="firstName"><i class="fas fa-user"></i> Ad</label>
                        <input type="text" class="form-control" id="firstName" name="FirstName" required />
                    </div>
                    <div class="form-group">
                        <label for="lastName"><i class="fas fa-user"></i> Soyad</label>
                        <input type="text" class="form-control" id="lastName" name="LastName" required />
                    </div>
                    <div class="form-group">
                        <label for="address"><i class="fas fa-home"></i> Adres</label>
                        <input type="text" class="form-control" id="address" name="Address" required />
                    </div>
                    <div class="form-group">
                        <label for="city"><i class="fas fa-city"></i> Şehir</label>
                        <input type="text" class="form-control" id="city" name="City" required />
                    </div>
                    <div class="form-group">
                        <label for="email"><i class="fas fa-envelope"></i> E-posta</label>
                        <input type="email" class="form-control" id="email" name="Email" required />
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">
                        <i class="fas fa-check-circle"></i> Gönder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js"></script>

<script>
    function submitBookingForm() {
        $.ajax({
            url: '@Url.Action("AddCarToReservation", "SelectedCar")',
            type: 'POST',
            data: $('#bookingForm').serialize(),
            success: function () {
                $('#bookingModal').modal('show');
            },
            error: function (xhr, status, error) {
                console.error('Hata detayları:', error);
                alert('Araç rezervasyonu sırasında bir hata oluştu.');
            }
        });
    }
</script>
