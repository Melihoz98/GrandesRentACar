@model GrandesRentACar.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<!-- Bootstrap or any other CSS framework for styling -->
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Car Details</h1>
    <div class="row">
        <div class="col-md-6 mb-4">
            <!-- Car image -->
            <img src="~/img/@Model.ImageUrl" class="img-fluid" alt="@Model.ModelName" style="height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-6 mb-4">
            <h2>@Model.ModelName (@Model.ModelYear)</h2>
            <p>
                <strong>Fuel Type:</strong> @Model.FuelType<br />
                <strong>Gear Type:</strong> @Model.GearType<br />
                <strong>Daily Price:</strong> $@Model.DailyPrice<br />
                <strong>Description:</strong> @Model.Description
            </p>

            <!-- Button to book the car or perform other actions -->
            <a href="/Car/Book/@Model.CarID" class="btn btn-primary">Book This Car</a>
        </div>
    </div>
</div>

<!-- Optional JS for Bootstrap -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
