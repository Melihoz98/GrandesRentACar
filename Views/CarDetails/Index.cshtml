@model GrandesRentACar.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h1 class="display-4 text-center mb-4">Car Details</h1>

    <div class="row">
        <div class="col-md-6">
            <img src="~/img/@Model.ImageUrl" class="img-fluid" alt="@Model.ModelName" style="height: 400px; object-fit: cover;">
        </div>
        <div class="col-md-6">
            <h2>@Model.ModelName (@Model.ModelYear)</h2>
            <p><strong>Fuel Type:</strong> @Model.FuelType</p>
            <p><strong>Gear Type:</strong> @Model.GearType</p>
            <p><strong>Daily Price:</strong> $@Model.DailyPrice</p>
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <div class="mt-4">
        <a href="/Home/Index" class="btn btn-primary">Back to home page</a>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
